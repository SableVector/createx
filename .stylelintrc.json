{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-recess-order"
    ],
    "rules": {
        "indentation": 4,
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "include",
                    "mixin",
                    "function",
                    "return",
                    "for",
                    "if",
                    "else"
                ]
            }
        ],
        "block-no-empty": null,
        "no-descending-specificity": null
    }
}